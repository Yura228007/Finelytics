@page "/create-plan"
<link href="css/components/General.css" rel="stylesheet" />
<link href="css/components/create_plan.css" rel="stylesheet"/>
<div id="plan-form-page" class="page-container hidden">
    <div class="plan-form-container">
        <h2 id="plan-form-title">Создать план</h2>
        <form id="plan-form">
            <input type="hidden" id="plan-id" name="planId">

            <div class="form-group">
                <label for="plan-name">Название плана:</label>
                <input type="text" id="plan-name" name="planName" required>
            </div>

            <div class="form-group date-range-picker">
                <label>Срок плана:</label>
                <div class="date-inputs">
                    <div>
                        <label for="plan-start-date">С:</label>
                        <input type="date" id="plan-start-date" name="planStartDate" required>
                    </div>
                    <div>
                        <label for="plan-end-date">:</label>
                        <input type="date" id="plan-end-date" name="planEndDate" required>
                    </div>
                </div>
            </div>

            <h3>Категории:</h3>
            <div id="categories-list">
                <!-- Категории будут добавляться сюда -->
                <!-- Пример одной категории -->
                <div class="category-item">
                    <div class="category-inputs">
                        <select name="categoryType" class="category-type">
                            <option value="expense">Расход</option>
                            <option value="income">Доход</option>
                        </select>
                        <input type="text" name="categoryName" placeholder="Название категории" required>
                        <input type="number" name="categoryBudget" placeholder="Бюджет" required>
                    </div>
                    <button type="button" class="btn-delete-category">Удалить</button>
                </div>
            </div>
            <button type="button" id="add-category-btn" class="btn-secondary">Добавить категорию</button>

            <div class="form-actions">
                <button type="submit" class="btn-primary" id="save-plan-btn">Создать</button>
                <button type="button" class="btn-secondary" id="cancel-plan-form-btn">Отмена</button>
            </div>
        </form>
    </div>
</div>

