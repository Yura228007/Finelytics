@page "/"
<link href="css/components/General.css" rel="stylesheet" />
<link href="css/components/authorization.css" rel="stylesheet" />
<div id="login-page">
    <div class="auth-form-container">
        <h2>Вход в аккаунт</h2>
        <form action="/home" method="post" id="login-form">
            <div class="form-group">
                <label for="login-username">Логин:</label>
                <input value="user.Email" type="text" id="login-username" name="username" required>
            </div>
            <div class="form-group">
                <label for="login-password">Пароль:</label>
                <input value="user.Password" type="password" id="login-password" name="password" required>
            </div>
            <button type="submit" class="btn-primary">Войти</button>
        </form>
        <div class="auth-switch">
            <p>Нет аккаунта?</p>
            <a href="/registration" class="btn-secondary">Зарегистрироваться</a>
        </div>
    </div>
</div>
